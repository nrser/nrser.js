[ignore]

# for now, just ignore ugh...
.*/node_modules/\@nrser/ugh/.*

#  some
# 
#     hjson/test/assets/failJSON*_test.json
# 
# test files in hjson choke up flow, so ignore 'em
# 
.*/node_modules/hjson/.*\.json

[include]

[libs]

[options]
# support babel plugins we use
esproposal.class_static_fields=enable
esproposal.export_star_as=enable

# it sucks not to able to use getters and setters... safety be damned.
unsafe.enable_getters_and_setters=true

# needed so Ugh can dynamically include other packages
module.ignore_non_literal_requires=true
